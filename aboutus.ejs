    <script>
      let visibility_mode = document.querySelector('.visibility-mode');
      let navbar = document.querySelector('.navbar');
      let nav_link = document.querySelectorAll('.nav-link');
      let body = document.querySelector('body');

      let darkMode = false;

      visibility_mode.addEventListener('click',() => {
        console.log("Listening");
        darkMode = !darkMode;

        if(darkMode){
          navbar.style.backgroundColor = '#00003f';
          visibility_mode.style.border = "none";
          visibility_mode.style.backgroundColor = "#00003f";
          visibility_mode.style.color = "#fff";
          body.style.backgroundColor = "#00003f";

          nav_link.forEach(nav_link => {
            nav_link.style.color = "#fff"
          });
        }
        else{
          navbar.style.backgroundColor = '#fff';
          visibility_mode.style.border = "none";
          visibility_mode.style.backgroundColor = "white";
          visibility_mode.style.color = "#black";
          body.style.backgroundColor = "whitesmoke";


          nav_link.forEach(nav_link => {
            nav_link.style.color = "black"
          });
        }
      })
</script>


